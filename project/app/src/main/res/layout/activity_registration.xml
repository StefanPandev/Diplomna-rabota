<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    android:background="@drawable/sign_up_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/RegistrationPageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.07999998" />

            <EditText
                android:id="@+id/RegistrationPageEmailET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="35"
                android:hint="Email"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/RegistrationPageTitle"
                app:layout_constraintStart_toStartOf="@+id/RegistrationPageTitle"
                app:layout_constraintTop_toBottomOf="@+id/RegistrationPageTitle"
                app:layout_constraintVertical_bias="0.17000002" />

            <EditText
                android:id="@+id/RegistrationPagePasswordET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="@+id/RegistrationPageEmailET"
                app:layout_constraintStart_toStartOf="@+id/RegistrationPageEmailET"
                app:layout_constraintTop_toBottomOf="@+id/RegistrationPageEmailET" />

            <EditText
                android:id="@+id/RegistrationPageRepPassET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:ems="10"
                android:hint="Repeat Password"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="@+id/RegistrationPagePasswordET"
                app:layout_constraintStart_toStartOf="@+id/RegistrationPagePasswordET"
                app:layout_constraintTop_toBottomOf="@+id/RegistrationPagePasswordET" />

            <EditText
                android:id="@+id/RegistrationPageNicknameET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:ems="10"
                android:maxLength="20"
                android:hint="Nickname"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/RegistrationPageRepPassET"
                app:layout_constraintStart_toStartOf="@+id/RegistrationPageRepPassET"
                app:layout_constraintTop_toBottomOf="@+id/RegistrationPageRepPassET" />

            <Button
                android:id="@+id/RegistrationPageRegisterBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:backgroundTint="@color/dark_button_color"
                android:text="Register"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/RegistrationPageNicknameET"
                app:layout_constraintStart_toStartOf="@+id/RegistrationPageNicknameET"
                app:layout_constraintTop_toBottomOf="@+id/RegistrationPageNicknameET" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>